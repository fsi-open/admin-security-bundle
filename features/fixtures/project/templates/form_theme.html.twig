{% extends 'bootstrap_3_layout.html.twig' %}

{% block form_errors %}
    {% apply spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <span class="help-block error" data-for="{{ form.vars.id }}">{{ error.message }}</span>
            {% endfor %}
        {% endif %}
    {% endapply %}
{% endblock form_errors %}
