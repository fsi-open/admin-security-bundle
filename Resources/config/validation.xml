<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="FSi\Bundle\AdminSecurityBundle\Security\User\User">

        <property name="username">
            <constraint name="NotBlank">
                <option name="message">admin_user.username.blank</option>
                <option name="groups">
                    <value>Create</value>
                    <value>Edit</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="minMessage">admin_user.username.short</option>
                <option name="max">255</option>
                <option name="maxMessage">admin_user.username.long</option>
                <option name="groups">
                    <value>Create</value>
                    <value>Edit</value>
                </option>
            </constraint>
        </property>

        <property name="email">
            <constraint name="NotBlank">
                <option name="message">admin_user.email.blank</option>
                <option name="groups">
                    <value>Create</value>
                    <value>Edit</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="minMessage">admin_user.email.short</option>
                <option name="max">254</option>
                <option name="maxMessage">admin_user.email.long</option>
                <option name="groups">
                    <value>Create</value>
                    <value>Edit</value>
                </option>
            </constraint>
            <constraint name="Email">
                <option name="message">admin_user.email.invalid</option>
                <option name="groups">
                    <value>Create</value>
                    <value>Edit</value>
                </option>
            </constraint>
        </property>

        <property name="plainPassword">
            <constraint name="NotBlank">
                <option name="message">admin_user.password.blank</option>
                <option name="groups">
                    <value>Create</value>
                    <value>ResetPassword</value>
                    <value>ChangePassword</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">6</option>
                <option name="max">4096</option>
                <option name="minMessage">admin_user.password.short</option>
                <option name="groups">
                    <value>Create</value>
                    <value>Edit</value>
                    <value>ResetPassword</value>
                    <value>ChangePassword</value>
                </option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
